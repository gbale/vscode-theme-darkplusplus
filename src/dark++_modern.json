{
    "$schema": "vscode://schemas/color-theme",
    "name": "Dark++ Modern",
    "include": "./vscode/dark_modern.json",
    "colors": {
        "editorHint.foreground": "#008000",
    },
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "comment": "#57a64a",
        "xmlDocCommentAttributeName": "#498f8f",
        "xmlDocCommentAttributeQuotes": "#498f8f",
        "xmlDocCommentCDataSection": "#498f8f",
        "xmlDocCommentComment": "#498f8f",
        "xmlDocCommentDelimiter": "#498f8f",
        "xmlDocCommentName": "#498f8f",
        "xmlDocCommentText": "#498f8f"
    },
    "tokenColors": [
        {
            "scope": "comment.line",
            "settings": {
                "foreground": "#57a64a"
            }
        },
        {
            "scope": "comment.block",
            "settings": {
                "foreground": "#498f8f"
            }
        },
        {
            "scope": "constant.language",
            "settings": {
                "foreground": "#678cb1"
            }
        },
        {
            "scope": [
                "keyword.operator",
                "keyword.operator.expression"
            ],
            "settings": {
                "foreground": "#9cb4aa"
            }
        }
    ]
}