{
    "$schema": "vscode://schemas/color-theme",
    "name": "Dark++ Modern",
    "include": "./vscode/dark_modern.json",
    "colors": {
        "editorHint.foreground": "#008000",
    },
    "semanticHighlighting": true,
    "semanticTokenColors": {
        "comment:csharp": "#57a64a",
        "xmlDocCommentAttributeName:csharp": "#9cdcfe",
        "xmlDocCommentAttributeQuotes:csharp": "#ce9178",
        "xmlDocCommentCDataSection:csharp": "#498f8f",
        "xmlDocCommentComment:csharp": "#498f8f",
        "xmlDocCommentDelimiter:csharp": "#808080",
        "xmlDocCommentName:csharp": "#569cd6",
        "xmlDocCommentText:csharp": "#498f8f"
    },
    "tokenColors": [
        {
            "scope": "comment.line",
            "settings": {
                "foreground": "#57a64a"
            }
        },
        {
            "scope": "comment.block",
            "settings": {
                "foreground": "#498f8f"
            }
        },
        {
            "scope": "constant.language",
            "settings": {
                "foreground": "#678cb1"
            }
        },
        {
            "scope": [
                "keyword.operator",
                "keyword.operator.expression"
            ],
            "settings": {
                "foreground": "#9cb4aa"
            }
        }
    ]
}